#popup.popup
    .popup__body
        .popup__content.popup__content-modific.b-lazy(data-src="img/modal.png")
            a.popup__close.close-popup(href='#header')
                img.b-lazy(src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="img/ic/close-e.svg" data-src-small="img/ic/close-e.svg" alt="")
